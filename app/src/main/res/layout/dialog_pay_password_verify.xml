<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_pay_pwd_verify"
        android:layout_width="275dp"
        android:layout_height="227dp"
        android:background="@drawable/shape_round_rect_r4_fill_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_input_password_pls"
            android:textColor="#343434"
            android:textSize="@dimen/text_20pt" />

        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gpv_code_pay_pwd_verify"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="14dp"
            app:gpvGridBg="@drawable/shape_round_rect_r4_fill_fffcfb_stroke_ddd"
            app:gpvLineColor="#dddddd"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="6"
            app:gpvTextSize="@dimen/text_12pt"
            app:gpvPasswordType="numberPassword"
            app:gpvTextColor="#343434" />

        <TextView
            android:id="@+id/tv_forget_pay_pwd_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/hint_forget_password_ask"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_12pt" />


        <TextView
            android:id="@+id/tv_confirm_pay_pwd_verify"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            style="@style/btn_primary"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18pt" />

    </LinearLayout>


    <ImageView
        android:id="@+id/v_close_pay_pwd_verify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/ic_close_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly_pay_pwd_verify" />

</androidx.constraintlayout.widget.ConstraintLayout>