<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/margin_h_common"
            android:src="@drawable/ic_back_black"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_h_common">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:lines="1"
                android:drawableLeft="@drawable/ic_search_gray"
                android:background="@drawable/shape_round_rect_r4_fill_ededf0"
                android:textSize="@dimen/text_14pt"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:textColorHint="#999999"
                android:textColor="#343434"
                android:hint="@string/hint_search_goods"
                android:drawablePadding="6dp"/>

            <ImageView
                android:id="@+id/iv_clear_keyword_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close"
                android:paddingRight="6dp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical|right"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_container_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>