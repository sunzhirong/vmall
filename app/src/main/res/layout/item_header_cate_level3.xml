<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">


    <TextView
        android:id="@+id/tv_cate_name"
        style="@style/blackA14sp"
        android:paddingLeft="15dp"
        android:text="男装"
        android:textSize="@dimen/text_14pt"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/grayA14sp"
            android:text="@string/label_all"
            android:textColor="@color/grayC" />

        <View
            android:layout_width="5.5dp"
            android:layout_height="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_arrow_grey_right" />
    </LinearLayout>



</RelativeLayout>