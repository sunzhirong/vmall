<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root_address_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_round_rect_r10_fill_white"
    android:layout_marginTop="5dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp"
    android:layout_marginHorizontal="@dimen/margin_h_common">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_name_phone_address_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_14pt"
            android:textColor="#343434"
            tools:text="沙世 12323434535"/>

        <TextView
            android:id="@+id/tv_mark_default_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_12pt"
            android:gravity="center"
            android:background="@drawable/shape_round_rect_r17_fill_tra_stroke_primary"
            android:text="@string/label_default"/>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_address_detail_address_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_12pt"
        android:textColor="#343434"
        tools:text="川岛镇"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="14dp"
       android:orientation="horizontal">

       <com.ysarch.uibase.textview.CompatTextView
           android:id="@+id/ctv_set_default_address_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableLeft="@drawable/selector_ic_radiobtn_cart"
           app:drawableLeftWidth="16dp"
           app:drawableLeftHeight="16dp"
           android:textSize="@dimen/text_14pt"
           android:textColor="#666666"
           android:text="@string/label_set_default"
           android:drawablePadding="8dp"/>


       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_edit_address_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"/>

       <ImageView
           android:id="@+id/iv_delete_address_item"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginLeft="15dp"
           android:src="@drawable/ic_delete"/>


   </LinearLayout>


</LinearLayout>