<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_container"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cate_name"
        style="@style/blackA14sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:text="男装"
        android:textSize="@dimen/text_16pt"
        android:textStyle="bold">
    </TextView>

    <View
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="6.5dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_arrow_grey_right" />

    <View
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_cate_name"
        android:background="@drawable/ic_cate_line" />
</RelativeLayout>