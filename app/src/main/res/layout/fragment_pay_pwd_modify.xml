<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_h_common"
        android:layout_marginTop="231dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_phone_pay_password_modify"
                android:layout_width="@dimen/size_icon_account"
                android:layout_height="@dimen/size_icon_account"
                android:src="@drawable/ic_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/et_account_pay_password_modify"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_account_pay_password_modify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/drawable_padding_account"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/text_paragraph"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_16pt" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thickness_line_divide"
            android:background="@color/gray_divide_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_auth_code_pay_password_modify"
                android:layout_width="@dimen/size_icon_account"
                android:layout_height="@dimen/size_icon_account"
                android:paddingHorizontal="1dp"
                android:src="@drawable/ic_authcode" />


            <EditText
                android:id="@+id/et_auth_code_pay_password_modify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/drawable_padding_account"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_auth_code"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/text_paragraph"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_16pt" />


            <TextView
                android:id="@+id/tv_auth_code_pay_password_modify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/label_auth_code"
                android:textColor="@color/auth_tv_enable_primary_dis_ccc"
                android:textSize="@dimen/text_14pt" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thickness_line_divide"
            android:background="@color/gray_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_password_pay_password_modify"
                android:layout_width="@dimen/size_icon_account"
                android:layout_height="@dimen/size_icon_account"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/et_password_pay_password_modify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/drawable_padding_account"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:maxLength="6"
                android:background="@null"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_pay_password"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/text_paragraph"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_16pt" />


            <ImageView
                android:id="@+id/iv_password_eye_pay_password_modify"
                android:layout_width="@dimen/size_icon_eyes"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/selector_password_visible_switch" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thickness_line_divide"
            android:background="@color/gray_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_icon_account"
                android:layout_height="@dimen/size_icon_account"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/et_password2_pay_password_modify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/drawable_padding_account"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="6"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_pay_password2"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/text_paragraph"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_16pt" />


            <ImageView
                android:id="@+id/iv_password_eye2_pay_password_modify"
                android:layout_width="@dimen/size_icon_eyes"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/selector_password_visible_switch" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thickness_line_divide"
            android:background="@color/gray_divide_line" />

        <TextView
            android:id="@+id/tv_confirm_pay_password_modify"
            style="@style/btn_primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_account_confirm_btn"
            android:layout_marginTop="60dp"
            android:enabled="false"
            android:text="@string/label_submit" />
    </LinearLayout>


</FrameLayout>


