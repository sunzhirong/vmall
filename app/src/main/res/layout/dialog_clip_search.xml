<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_pay_pwd_verify"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rect_r4_fill_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:background="@drawable/ic_clip_search_bg"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="45dp"
                android:text="@string/label_intelligent_search"
                style="@style/blackA14sp"
                android:textSize="@dimen/text_18pt"/>


            <TextView
                android:layout_marginLeft="28dp"
                android:text="@string/label_intelligent_search_tips"
                style="@style/grayA14sp"
                android:textSize="@dimen/text_12pt"/>
        </LinearLayout>

        <TextView
            android:layout_margin="25dp"
            android:id="@+id/tv_content"
            android:gravity="center"
            style="@style/blackA14sp"/>





        <TextView
            android:id="@+id/tv_clip_search"
            android:layout_marginBottom="20dp"
            android:text="@string/label_search_now"
            android:layout_marginLeft="0dp"
            android:layout_width="240dp"
            style="@style/sumbitTvStyle" />

    </LinearLayout>


    <ImageView
        android:id="@+id/v_close_clipsearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly_pay_pwd_verify" />

</androidx.constraintlayout.widget.ConstraintLayout>