<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_pay_pwd_verify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rect_r10_fill_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_delete_title"
            style="@style/blackA14sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/dialog_edit_order_title"
            android:textSize="@dimen/text_16pt" />
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/et_dialog_num"
            style="@style/blackA14sp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:maxLength="4"
            android:background="@drawable/shape_round_rect_r10_fill_tran_stroke_d2d2d2"
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="25dp"
            android:textSize="@dimen/text_16pt" />

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:layout_marginBottom="25dp"-->
<!--            android:id="@+id/et_dialog_num"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:id="@+id/tv_dialog_cancel"
                android:text="@string/label_cancel"
                android:paddingHorizontal="20dp"
                style="@style/cancelTvStyle" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:paddingHorizontal="20dp"
                android:layout_width="120dp"
                android:id="@+id/tv_dialog_confirm"
                android:text="@string/label_confirm"
                style="@style/sumbitTvStyle" />

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>