<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:background="@drawable/ic_coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price_prefix_coupon_selectable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@color/redA"
                android:textSize="14sp" />

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_price_coupon_selectable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/redA"
                android:textSize="32sp"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="94dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_name_coupon_selectable"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="券名称"
                android:textStyle="bold"
                android:textColor="@color/blackA"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_radio_coupon_selectable"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/selector_ic_radiobtn_cart"/>
        </LinearLayout>



        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_prefix_coupon_selectable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_availabel_time_prefix_coupon"
                android:textColor="#ff999999"
                android:textSize="@dimen/text_13pt" />

            <TextView
                android:id="@+id/tv_time_coupon_selectable"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:text="2020-02-31"
                android:textColor="#ff999999"
                android:textSize="@dimen/text_13pt" />
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_coupon_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>






</LinearLayout>