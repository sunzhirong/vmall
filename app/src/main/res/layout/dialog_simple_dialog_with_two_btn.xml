<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/shape_round_rect_r4_fill_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_content_simple_dialog_two_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="38dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="支付密码错误，请重试" />

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_simple_dialog_two_btn"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel_simple_dialog_two_btn"
            style="@style/cancelTvStyle"
            tools:text="取消" />

        <TextView
            android:layout_marginLeft="25dp"
            android:id="@+id/tv_confirm_simple_dialog_two_btn"
            style="@style/sumbitTvStyle"
            tools:text="取消" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>