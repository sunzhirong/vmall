<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_root_common_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <ViewStub
        android:id="@+id/vs_title_bar_web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintTop_toTopOf="parent" />


    <WebView
        android:id="@+id/wv_common_web_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:focusable="true"
        android:focusableInTouchMode="true" />


    <ImageView
        android:id="@+id/iv_common_web_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_height"
        android:background="@color/white"
        android:paddingTop="6dp"
        android:src="@drawable/bg_webview_placeholder" />

    <ProgressBar
        android:id="@+id/webView_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/title_bar_height"
        android:progressDrawable="@drawable/progress_drawable"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="#1200"
        android:visibility="gone" />


</FrameLayout>