<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:background="@drawable/ic_paid_safe_bg"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_paid_safe_icon"/>

        <TextView
            android:text="@string/label_pwd_safe_tips"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/blackA14sp"
            android:textSize="@dimen/text_13pt"
            />
        <TextView
            android:id="@+id/tv_modify_pwd"
            android:layout_marginRight="12dp"
            android:text="@string/set_now"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/shape_round_rect_r15_fill_primary"
            style="@style/sumbitTvStyle"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_paid_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back_home"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/shape_round_rect_r22_fill_tra_stroke_primary"
            android:text="@string/label_back_to_home"
            android:layout_height="45dp"
            style="@style/cancelTvStyle"/>
        <TextView
            android:id="@+id/tv_check_order"
            android:text="@string/label_view_order"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/shape_round_rect_r22_fill_primary"
            android:layout_height="45dp"
            style="@style/sumbitTvStyle"/>
    </LinearLayout>


</LinearLayout>