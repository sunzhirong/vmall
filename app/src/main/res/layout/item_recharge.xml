<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_status_recharge_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_h_common"
        app:layout_constraintRight_toLeftOf="@+id/tv_amount_recharge_item"
        android:textColor="#343434"
        android:textSize="@dimen/text_17pt"
        tools:text="@string/label_recharge_status_reject"/>

    <TextView
        android:id="@+id/tv_amount_recharge_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/margin_h_common"
        android:layout_marginLeft="6dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_17pt"
        tools:text="$2334"/>

    <TextView
        android:id="@+id/tv_date_recharge_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/margin_h_common"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_amount_recharge_item"
        android:textColor="#666666"
        android:textSize="@dimen/text_12pt"
        tools:text="2020-10-17"/>

    <TextView
        android:id="@+id/tv_recharge_no_recharge_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date_recharge_item"
        android:layout_marginRight="@dimen/margin_h_common"
        android:layout_marginLeft="6dp"
        android:textColor="#343434"
        android:textSize="@dimen/text_12pt"
        tools:text="$2334"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:background="@color/gray_divide_line"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>