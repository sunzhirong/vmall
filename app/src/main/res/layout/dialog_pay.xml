<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_pay_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/label_confirm_pay"
                android:textColor="@color/blackA"
                android:textSize="@dimen/text_18pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:padding="5dp"
                android:src="@drawable/ic_dialog_close" />

            <View
                style="@style/horLineStyle"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_page_gray"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_rect_r5_fill_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_pay_wallet" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/label_pay_wallet" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blackA14sp"
                            android:layout_marginLeft="12dp"
                            android:text="@string/label_pay_wallet"
                            android:textColor="#999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_balance"
                            style="@style/redA14sp"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/selector_ic_radiobtn_cart" />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_rect_r5_fill_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_pay_ali" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/label_pay_ali" />

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/label_pay_ali_tips"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/selector_ic_radiobtn_cart" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_rect_r5_fill_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_pay_aeon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/aeon_card" />


                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/selector_ic_radiobtn_cart" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_rect_r5_fill_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_pay_aba" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/aba_pay" />

                    <TextView
                        style="@style/blackA14sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/tap_to_pay_with_aba_mobile"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/selector_ic_radiobtn_cart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="12dp"
            android:orientation="horizontal">

            <TextView
                style="@style/blackA14sp"
                android:text="@string/label_total"
                android:textSize="@dimen/text_16pt" />

            <TextView
                style="@style/redA14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4.5dp"
                android:text="$"
                android:textSize="@dimen/text_12pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/redA14sp"
                android:text="11111"
                android:textSize="@dimen/text_20pt"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_round_rect_r22_fill_primary"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16pt" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/label_input_password"
                android:textColor="@color/blackA"
                android:textSize="@dimen/text_18pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/ic_dialog_back" />

            <View
                style="@style/horLineStyle"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ysarch.vmall.component.PwdEditText
                    android:id="@+id/pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12dp" />


                <TextView
                    style="@style/blackA14sp"
                    android:layout_gravity="end"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:id="@+id/tv_forget_pay_pwd"
                    android:text="@string/text_forget_password"
                    android:textColor="#00c0ff" />

                <com.ysarch.vmall.component.KeyboardView
                    android:id="@+id/keyboardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:theme="@style/AppTheme"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>