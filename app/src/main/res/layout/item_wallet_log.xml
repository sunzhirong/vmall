<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <View
        android:id="@+id/v_divide_wallet_log_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:layout_marginHorizontal="@dimen/margin_h_common"
        android:background="@color/gray_divide_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dec_wallet_log_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_h_common"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_14pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_amount_wallet_log_item"
        app:layout_constraintTop_toBottomOf="@+id/v_divide_wallet_log_item"
        tools:text="@string/label_recharge_status_reject" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_amount_wallet_log_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="@dimen/margin_h_common"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$2334" />

    <TextView
        android:id="@+id/tv_date_wallet_log_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_h_common"
        android:layout_marginBottom="10dp"
        android:textColor="#999999"
        android:textSize="@dimen/text_12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_amount_wallet_log_item"
        tools:text="2020-10-17" />


</androidx.constraintlayout.widget.ConstraintLayout>