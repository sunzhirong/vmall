<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_margin="@dimen/padding_h_order_item"
        android:id="@+id/riv_cover_order_goods_item"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:riv_corner_radius="5dp" />

    <LinearLayout
        android:layout_marginTop="@dimen/padding_h_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_h_order_item"
        android:layout_toRightOf="@+id/riv_cover_order_goods_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_order_goods_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="沙世漫画"
            android:textColor="@color/blackA"
            android:textSize="@dimen/text_13pt" />


        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_sku_order_goods_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grayb_2dp_bg"
            android:text="测试"
            android:textColor="@color/grayA"
            android:textSize="@dimen/text_12pt" />




        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price_order_goods_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KHR 234"
                android:textColor="@color/redA"
                android:textSize="@dimen/text_14pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="85dp"
                android:layout_height="22dp"
                android:background="@drawable/shape_round_rect_r2_fill_tra_stroke_grayc"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_minus_goods_cart"
                    android:src="@drawable/selector_minus"
                    android:layout_width="22dp"
                    android:padding="5dp"
                    android:layout_height="22dp"/>

                <View
                    style="@style/verLineStyle"/>
                <TextView
                    android:text="1"
                    android:id="@+id/tv_count_order_goods_item"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/blackA"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_13pt" />
                <View
                    style="@style/verLineStyle"/>
                <ImageView
                    android:id="@+id/iv_plus_goods_cart"
                    android:src="@drawable/ic_black_cross"
                    android:layout_width="22dp"
                    android:padding="5dp"
                    android:layout_height="22dp"/>
            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>

