<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon_phone_register"
            android:layout_width="@dimen/size_icon_account"
            android:layout_height="@dimen/size_icon_account"
            android:src="@drawable/ic_phone"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_account_register"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_account_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/drawable_padding_account"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_phone_number"
            android:inputType="number"
            android:maxLength="12"
            android:lines="1"
            android:textColor="@color/text_paragraph"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_16pt"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:background="@color/gray_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_icon_auth_code_register"
            android:layout_width="@dimen/size_icon_account"
            android:layout_height="@dimen/size_icon_account"
            android:scaleType="fitCenter"
            android:paddingHorizontal="1dp"
            android:src="@drawable/ic_authcode"/>


        <EditText
            android:id="@+id/et_auth_code_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/drawable_padding_account"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_auth_code"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/text_paragraph"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_16pt" />


        <TextView
            android:id="@+id/tv_auth_code_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/label_auth_code"
            android:textColor="@color/auth_tv_enable_primary_dis_ccc"
            android:textSize="@dimen/text_14pt"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:background="@color/gray_divide_line"/>

    <LinearLayout
        android:id="@+id/ly_nickname_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_nickname_register"
            android:layout_width="@dimen/size_icon_account"
            android:layout_height="@dimen/size_icon_account"
            android:src="@drawable/ic_nickname" />

        <EditText
            android:id="@+id/et_nickname_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/drawable_padding_account"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_nickname"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_paragraph"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_nickname_register"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:id="@+id/v_divide_line_nickname_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:background="@color/gray_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon_password_register"
            android:layout_width="@dimen/size_icon_account"
            android:layout_height="@dimen/size_icon_account"
            android:src="@drawable/ic_lock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_password_register"
            app:layout_constraintTop_toBottomOf="@id/ctl_nickname_register" />

        <EditText
            android:id="@+id/et_password_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/drawable_padding_account"
            android:layout_marginRight="4dp"
            android:background="@null"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:lines="1"
            android:textColor="@color/text_paragraph"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_16pt" />


        <ImageView
            android:id="@+id/iv_password_eye_register"
            android:layout_width="@dimen/size_icon_eyes"
            android:layout_height="@dimen/size_icon_eyes"
            android:padding="4dp"
            android:src="@drawable/selector_password_visible_switch"
            app:layout_constraintBottom_toBottomOf="@+id/et_password_register"
            app:layout_constraintLeft_toRightOf="@+id/et_password_register"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_password_register" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_line_divide"
        android:background="@color/gray_divide_line"/>


    <TextView
        android:id="@+id/tv_confirm_register"
        style="@style/btn_primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_account_confirm_btn"
        android:layout_marginTop="@dimen/margin_top_register_button"
        android:enabled="false"
        android:text="@string/label_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_divide_line_password_register" />

</LinearLayout>


