<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_keyboard_vertical"
        android:orientation="vertical"
        android:showDividers="end|beginning|middle"
        android:stretchColumns="0,1,2">

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button01"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button02"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button03"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="3"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button04"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button05"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button06"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="6"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:id="@+id/button07"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button08"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button09"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="9"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal"
            android:showDividers="end|beginning|middle">

            <Button
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button00"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="0"
                android:textSize="24sp" />

<!--            <Button-->
<!--                android:id="@+id/buttonCross"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="56dp"-->
<!--                android:background="@drawable/selector_keyboard_click_dark"-->
<!--                android:text="×"-->
<!--                android:textSize="24sp" />-->

                        <ImageView
                            android:id="@+id/buttonCross"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:padding="20dp"
                            android:src="@drawable/ic_keyboard_delete"
                            android:text="×"
                            android:textSize="24sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>