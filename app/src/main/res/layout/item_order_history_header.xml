<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:background="@drawable/shape_round_rect_lt5_rt5_fill_white"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_h_order_item">

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_order_num_prefix"
        android:textColor="#343434"
        android:textSize="@dimen/text_14pt" />

    <TextView
        android:id="@+id/tv_sn_order_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textColor="#343434"
        android:textSize="@dimen/text_14pt"
        android:text="387239487" />


    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tv_status_order_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_14pt"
        android:text="待付款" />
</LinearLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ic_coupon_line"/>
</RelativeLayout>