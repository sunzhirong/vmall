<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin_h_common"
    android:paddingRight="@dimen/margin_h_common"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:id="@+id/rl_container"
    android:layout_height="50dp">


    <ImageView
        android:id="@+id/iv_left"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toEndOf="@+id/iv_left"
        android:id="@+id/tv_title"
        style="@style/blackA14sp"
        android:text="11111"
        android:layout_centerVertical="true" />
    
    <ImageView
        android:id="@+id/iv_enter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="6dp"
        android:background="@drawable/ic_arrow_grey_right"
        android:layout_height="11dp" />
    <TextView
        android:id="@+id/tv_right"
        style="@style/grayA14sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/iv_enter"/>
</RelativeLayout>