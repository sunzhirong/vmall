<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ysarch.uibase.StatusBarView
        android:id="@+id/sbv_goods_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <ImageView
            android:id="@+id/iv_back_oval_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:paddingLeft="@dimen/margin_h_common"
            android:src="@drawable/ic_back_ovel_goods"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back_black_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:alpha="0"
            android:paddingLeft="@dimen/margin_h_common"
            android:src="@drawable/ic_back_black_goods"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_msg_oval_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:paddingRight="@dimen/margin_h_common"
            android:src="@drawable/ic_msg_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_msg_black_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:alpha="0"
            android:paddingRight="@dimen/margin_h_common"
            android:src="@drawable/ic_msg_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_share_oval_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:paddingRight="@dimen/margin_h_common"
            android:src="@drawable/ic_share_ovel_goods"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_msg_oval_goods_title_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_share_black_goods_title_bar"
            android:layout_width="46dp"
            android:layout_height="31dp"
            android:alpha="0"
            android:paddingRight="@dimen/margin_h_common"
            android:src="@drawable/ic_share_black_goods"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_msg_oval_goods_title_bar"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- <ImageView
         android:layout_width="31dp"
         android:layout_height="31dp"
         android:src="@drawable/ic_share_ovel_goods"-->


</LinearLayout>