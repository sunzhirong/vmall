<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_checked_home_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15pt"
        app:layout_constraintBottom_toBottomOf="@+id/v_indicator_home_tab_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        tools:text="测试"/>

    <TextView
        android:id="@+id/tv_uncheck_home_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_13pt"
        tools:text="测试"
        app:layout_constraintBottom_toBottomOf="@+id/tv_checked_home_tab_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_checked_home_tab_text" />

    <View
        android:id="@+id/v_indicator_home_tab_text"
        android:layout_width="22dp"
        android:layout_height="4dp"
        android:background="@drawable/shape_round_rect_r2_fill_f5f5f5"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_uncheck_home_tab_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>